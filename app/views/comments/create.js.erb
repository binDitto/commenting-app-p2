
<% if Comment.new.errors.any? %>
  alert("ERROR(S): <%= j Comment.new.errors.full_messages.join('; ') %>")
<% else %>
  $('ul.add').prepend('<%= j render @comment %>');
  $('li.<%= @comment.name %>').hide().fadeIn(1000);
  $('li:gt(5):last').remove();
  $('form.erase').find('input[type=text], textarea').fadeOut(500).fadeIn(500).val('');
<% end %>
